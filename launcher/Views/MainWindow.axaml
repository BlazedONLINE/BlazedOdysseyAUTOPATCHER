<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BlazedOdysseyLauncher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="BlazedOdysseyLauncher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterScreen">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*,Auto,Auto">
    
    <!-- Header -->
    <Border Grid.Row="0" Background="#1E1E1E" Padding="20">
      <Grid ColumnDefinitions="*,Auto">
        <StackPanel Grid.Column="0">
          <TextBlock Text="Blazed Odyssey" FontSize="24" FontWeight="Bold" Foreground="White"/>
          <TextBlock Text="Launcher &amp; Auto-Updater" FontSize="14" Foreground="#CCCCCC"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
          <Button Command="{Binding CheckForUpdatesCommand}"
                  IsEnabled="{Binding !IsUpdating}"
                  Content="Check Updates"
                  Classes="accent"/>
          <Button Command="{Binding OpenSettingsCommand}"
                  IsEnabled="{Binding !IsUpdating}"
                  Content="Settings"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Main Content -->
    <Grid Grid.Row="1" Margin="20" RowDefinitions="Auto,Auto,Auto,*">
      
      <!-- Version Info -->
      <Border Grid.Row="0" Background="#F5F5F5" Padding="15" Margin="0,0,0,10" CornerRadius="5">
        <Grid ColumnDefinitions="*,*">
          <StackPanel Grid.Column="0">
            <TextBlock Text="Current Version" FontWeight="SemiBold" Foreground="#666"/>
            <TextBlock Text="{Binding CurrentVersion}" FontSize="18" Margin="0,5,0,0"/>
          </StackPanel>
          <StackPanel Grid.Column="1">
            <TextBlock Text="Available Version" FontWeight="SemiBold" Foreground="#666"/>
            <TextBlock Text="{Binding AvailableVersion}" FontSize="18" Margin="0,5,0,0"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- Progress -->
      <StackPanel Grid.Row="1" Margin="0,0,0,15" IsVisible="{Binding IsUpdating}">
        <TextBlock Text="{Binding Status}" Margin="0,0,0,5"/>
        <ProgressBar Value="{Binding ProgressValue}" 
                     IsIndeterminate="{Binding IsProgressIndeterminate}"
                     Height="6"/>
        <TextBlock Text="{Binding ProgressText}" 
                   FontSize="12" 
                   Foreground="#666"
                   HorizontalAlignment="Right"
                   Margin="0,2,0,0"/>
      </StackPanel>

      <!-- Action Buttons -->
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,0,0,20">
        
        <Button Command="{Binding PlayGameCommand}"
                IsEnabled="{Binding CanPlay}"
                Content="Play Game"
                Classes="accent"
                Width="120" Height="40"
                FontSize="16"/>
        
        <Button Command="{Binding UpdateGameCommand}"
                IsEnabled="{Binding CanUpdate}"
                Content="Update"
                Width="120" Height="40"
                FontSize="16"/>
        
        <Button Command="{Binding RepairGameCommand}"
                IsEnabled="{Binding CanRepair}"
                Content="Verify/Repair"
                Width="120" Height="40"
                FontSize="16"/>
        
        <Button Command="{Binding CancelCommand}"
                IsEnabled="{Binding IsUpdating}"
                Content="Cancel"
                Width="120" Height="40"
                FontSize="16"/>
      </StackPanel>

      <!-- Log -->
      <Expander Grid.Row="3" Header="Activity Log" IsExpanded="False">
        <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" MaxHeight="200">
          <ScrollViewer>
            <ItemsControl ItemsSource="{Binding LogMessages}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11" Margin="0,1"/>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </Border>
      </Expander>
    </Grid>

    <!-- Status Bar -->
    <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,10">
      <TextBlock Text="{Binding Status}" FontSize="12"/>
    </Border>
  </Grid>

  <Window.Styles>
    <Style Selector="Button.accent">
      <Setter Property="Background" Value="#0078D4"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="3"/>
    </Style>
    
    <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#106EBE"/>
    </Style>
    
    <Style Selector="Button.accent:pressed /template/ ContentPresenter">
      <Setter Property="Background" Value="#005A9E"/>
    </Style>

    <Style Selector="Button">
      <Setter Property="Background" Value="White"/>
      <Setter Property="BorderBrush" Value="#CCCCCC"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="3"/>
      <Setter Property="Padding" Value="15,8"/>
    </Style>
    
    <Style Selector="Button:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#F5F5F5"/>
    </Style>
    
    <Style Selector="Button:pressed /template/ ContentPresenter">
      <Setter Property="Background" Value="#E5E5E5"/>
    </Style>

    <Style Selector="ProgressBar">
      <Setter Property="Foreground" Value="#0078D4"/>
      <Setter Property="Background" Value="#E0E0E0"/>
    </Style>
  </Window.Styles>

</Window>